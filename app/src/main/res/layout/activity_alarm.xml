<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_bg_of_alarm_activity"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".AlarmActivity">

    <TextView
        android:id="@+id/tvDateAlarm"
        android:textColor="@color/white"
        android:text="Thu, 06 May"
        android:textSize="@dimen/text_large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextClock
        android:id="@+id/tcTimeCurrent"
        android:format24Hour="kk:mm"
        android:format12Hour="kk:mm"
        android:text="07:30"
        android:textSize="96sp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/ivStopAlarm"
        android:layout_marginTop="91dp"
        android:src="@drawable/ic_stopalarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvSnoozeAlarm"
        android:text="@string/snooze"
        android:gravity="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="26dp"
        android:textColor="@color/white"
        android:background="@drawable/custom_button_snooze_alarm"
        android:layout_width="120dp"
        android:layout_height="40dp"/>

    <TextView
        android:id="@+id/tvSnoozeCountDown"
        android:visibility="gone"
        android:text="00000000"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>